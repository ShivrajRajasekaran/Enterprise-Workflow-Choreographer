# ============================================
# Enterprise Workflow Choreographer Configuration
# ============================================

# IBM watsonx AI Configuration
WATSONX_API_KEY=your_watsonx_api_key
WATSONX_PROJECT_ID=your_project_id
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# ServiceNow Configuration
SERVICENOW_INSTANCE=your_instance.service-now.com
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_ORG=your_organization

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_APP_TOKEN=xapp-your-app-token

# Confluence Configuration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your_email@company.com
CONFLUENCE_API_TOKEN=your_atlassian_api_token
CONFLUENCE_SPACE_KEY=INCIDENTS

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@company.com
JIRA_API_TOKEN=your_atlassian_api_token
JIRA_PROJECT_KEY=INC

# Application Configuration
APP_ENV=development
APP_PORT=8000
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AUTO_TICKETING=true
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_CONFLUENCE_DOCS=true
ENABLE_GITHUB_ANALYSIS=true
